{% schema %}
{
  "name": "Featured Programs",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Programs"
    }
  ],
  "blocks": [
    {
      "type": "program",
      "name": "Program",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Program Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Programs",
      "blocks": [
        {
          "type": "program"
        },
        {
          "type": "program"
        },
        {
          "type": "program"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="featured-programs page-width-wide section-padding">
  {% if section.settings.heading != blank %}
    <h2 class="text-center">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="grid grid--3-col-desktop grid--1-col-tablet-down">
    {% for block in section.blocks %}
      <div class="program-card text-center">
        {% if block.settings.image != blank %}
          <div class="program-card__image-wrapper media media--square">
            <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.title }}" loading="lazy" width="600" height="600">
          </div>
        {% else %}
           <div class="program-card__image-wrapper media media--square placeholder">
            {% assign fallback_image = '' %}
            {% case forloop.index %}
              {% when 1 %}
                {% assign fallback_image = 'program-monthly.jpg' %}
              {% when 2 %}
                 {% assign fallback_image = 'program-fat-loss.jpg' %}
              {% when 3 %}
                 {% assign fallback_image = 'program-training.jpg' %}
              {% else %}
                 {% assign fallback_image = 'program-monthly.jpg' %}
            {% endcase %}
            <img src="{{ fallback_image | asset_url }}" alt="{{ block.settings.title }}" loading="lazy" width="600" height="600" style="object-fit: cover; width: 100%; height: 100%;">
          </div>
        {% endif %}
        <h3 class="h4 mt-4">{{ block.settings.title }}</h3>
        {% if block.settings.link %}
          <a href="{{ block.settings.link }}" class="button button--primary mt-2">Learn More</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .featured-programs {
    padding-top: var(--section-padding-top, 60px);
    padding-bottom: var(--section-padding-bottom, 60px);
  }
  .program-card {
    display: flex;
    flex-direction: column;
    align-items: center; /* Strict centering of children */
    text-align: center; /* Centering of text */
    padding: 24px;
    height: 100%;
    background-color: rgb(var(--color-background));
    border-radius: 12px;
    border: 1px solid rgba(var(--color-foreground), 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .program-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.08);
  }
  .program-card__image-wrapper {
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 20px;
    border-radius: 8px;
    overflow: hidden;
  }
  .program-card__image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .program-card h3 {
    margin-top: 0;
    margin-bottom: 12px;
    font-size: 1.3rem;
  }
  .program-card .button {
    margin-top: auto;
    width: auto; /* Fit content for centered look */
    min-width: 140px;
  }

  @media screen and (max-width: 749px) {
    .featured-programs {
      padding-top: 40px;
      padding-bottom: 40px;
    }
    .program-card {
      padding: 16px;
    }
    .grid--1-col-tablet-down {
      display: grid;
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  @media screen and (min-width: 750px) {
    .grid {
      display: grid;
      gap: var(--grid-desktop-horizontal-spacing, 30px);
    }
    .grid--3-col-desktop {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
