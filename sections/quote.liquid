{% schema %}
{
  "name": "Quote",
  "settings": [
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "Transform your body, transform your life."
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author",
      "default": "B Fit Buddy"
    }
  ],
  "presets": [
    {
      "name": "Quote"
    }
  ]
}
{% endschema %}

<div class="quote-section page-width section-padding text-center">
  <blockquote class="h2" style="font-family: 'Outfit', serif; font-style: italic;">
    "{{ section.settings.quote_text }}"
  </blockquote>
  {% if section.settings.author != blank %}
    <cite class="h5 mt-4 d-block" style="font-style: normal;">â€” {{ section.settings.author }}</cite>
  {% endif %}
</div>

<style>
  .quote-section {
    padding-top: 80px;
    padding-bottom: 80px;
    background-color: var(--color-brand-beige);
    color: var(--color-brand-black);
  }
  .quote-section blockquote {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.4;
  }
  @media screen and (max-width: 749px) {
    .quote-section {
      padding-top: 60px;
      padding-bottom: 60px;
    }
    .quote-section blockquote {
      font-size: 1.5rem; /* Adjust heading size for mobile */
      max-width: 100%;
    }
  }
</style>
