{% schema %}
{
  "name": "Features Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Grid",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="features-grid page-width-wide section-padding" style="background-color: var(--color-brand-black); color: var(--color-brand-beige);">
  {% if section.settings.heading != blank %}
    <h2 class="text-center" style="color: var(--color-brand-beige);">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="grid grid--3-col-desktop grid--1-col-tablet-down">
    {% for block in section.blocks %}
      <div class="feature-card text-center p-4 border-feature">
        <h3 class="h4" style="color: var(--color-brand-beige);">{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .features-grid {
    padding-top: var(--section-padding-top, 60px);
    padding-bottom: var(--section-padding-bottom, 60px);
  }
  .feature-card {
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    text-align: center !important;
    justify-content: flex-start !important;
    padding: 30px 24px !important;
    height: 100%;
    background-color: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.1);
    border-radius: 12px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.06);
    border-color: rgba(var(--color-foreground), 0.2);
  }
  .feature-card h3 {
    margin-top: 10px;
    margin-bottom: 12px;
    font-size: 1.25rem;
    font-weight: 600;
  }
  .feature-card p {
    margin: 0;
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.8);
  }

  @media screen and (max-width: 749px) {
    .features-grid {
      padding-top: 40px;
      padding-bottom: 40px;
    }
    .feature-card {
      padding: 24px 20px;
    }
    /* Mobile Grid Fallback */
    .grid--1-col-tablet-down {
      display: grid;
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  @media screen and (min-width: 750px) {
    .grid {
      display: grid;
      gap: var(--grid-desktop-horizontal-spacing, 30px);
    }
    .grid--3-col-desktop {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
