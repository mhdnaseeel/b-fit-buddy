{% schema %}
{
  "name": "Features Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Grid",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="features-grid page-width-wide section-padding" style="background-color: var(--color-brand-black); color: var(--color-brand-beige);">
  {% if section.settings.heading != blank %}
    <h2 class="text-center" style="color: var(--color-brand-beige);">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="grid grid--3-col-desktop grid--1-col-tablet-down">
    {% for block in section.blocks %}
      <div class="feature-card text-center p-4 border-feature">
        <h3 class="h4" style="color: var(--color-brand-beige);">{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .features-grid {
    padding-top: 60px;
    padding-bottom: 60px;
  }
  .feature-card {
    padding: 20px;
    border: 1px solid var(--color-brand-beige);
    margin: 10px;
    border-radius: 8px;
  }
</style>
