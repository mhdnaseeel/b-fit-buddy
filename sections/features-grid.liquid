{% schema %}
{
  "name": "Features Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Grid",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="features-grid page-width-wide section-padding" style="background-color: var(--color-brand-black); color: var(--color-brand-beige);">
  {% if section.settings.heading != blank %}
    <h2 class="text-center" style="color: var(--color-brand-beige);">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="grid grid--3-col-desktop grid--1-col-tablet-down">
    {% for block in section.blocks %}
      <div class="feature-card text-center p-4 border-feature">
        <h3 class="h4" style="color: var(--color-brand-beige);">{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .features-grid {
    padding-top: var(--section-padding-top, 60px);
    padding-bottom: var(--section-padding-bottom, 60px);
  }
  .feature-card {
    display: flex;
    flex-direction: column;
    padding: 20px;
    border: 1px solid var(--color-brand-beige);
    border-radius: 8px;
    height: 100%;
    margin: 0; /* Margin controlled by grid gap now */
    background-color: rgb(var(--color-background));
    text-align: center;
    justify-content: flex-start;
  }
  .feature-card h3 {
    margin-top: 10px;
  }

  @media screen and (max-width: 749px) {
    .features-grid {
      padding-top: 40px;
      padding-bottom: 40px;
    }
    .feature-card {
      padding: 15px;
    }
    /* Mobile Grid Fallback */
    .grid--1-col-tablet-down {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }

  @media screen and (min-width: 750px) {
    .grid {
      display: grid;
      gap: var(--grid-desktop-horizontal-spacing, 30px);
    }
    .grid--3-col-desktop {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
